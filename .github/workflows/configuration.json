{
    "categories": [
      {
        "title": "## ğŸš€ Features",
        "labels": ["feature", "feat", "FEAT", "new"]
      },
      {
        "title": "## ğŸ› Fixes",
        "labels": ["fix", "FIX"]
      },
      {
        "title": "## ğŸ§ª Tests",
        "labels": ["test"]
      },
      {
        "title": "## ğŸ§ª Tests and some Magic",
        "labels": ["test", "magic"],
        "exclude_labels": ["no-magic"]
      },
      {
        "title": "## ğŸ”¨ Improvements",
        "labels": ["improvements", "enhancement", "impr"]
      },
      {
        "title": "## ğŸ› ï¸ Workflow",
        "labels": ["ci", "cd", "workflow", "action"]
      }
    ],
    "label_extractor": [
        {
          "pattern": "^(\\w+)\\s*(\\(\\s*.+\\s*\\))?\\s*:\\s*(.+)",
          "target": "$1",
          "flags": "gu",
          "on_property": ["title"],
          "method": "replace"
        }
    ],
    "transformers": [
        {
            "pattern": "^(\\w+)\\s*(\\(\\s*.+\\s*\\))?\\s*:\\s*(.+)",
            "target": "- $2$3\n",
            "flags": "gu",
            "method": "replace"
        },
        {
            "pattern": "\\n",
            "target": "\n   ",
            "flags": "gu",
            "method": "replace"
        }
      ],
    "ignore_labels": [
      "ignore", "other"
    ],
    "sort": {
      "order": "ASC",
      "on_property": "mergedAt"
    },
    "template": "\n# Changes since ${{FROM_TAG}} to ${{TO_TAG}}\n\n${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
    "pr_template": "${{BODY}}"
}